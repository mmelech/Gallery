<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
{#        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">#}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ url('photo_index') }}">GALERIA ZDJĘĆ</a>
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ url('photo_index') }}">{{ 'label_photos'|trans }}</a>
                </li>
                <li>
                    <a href="{{ url('gallery_index') }}">{{ 'label_galleries'|trans }}</a>
                </li>
                <li>
                    <a href="{{ url('tag_index') }}">{{ 'label_tags'|trans }}</a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') and 'ROLE_ADMIN' in app.user.roles %}
                    <li>
                        <a href="{{ url('user_index') }}">{{ 'label_users'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li>
                    <a href="{{ url('user_show', {id: app.user.id}) }}">{{ 'Zobacz profil' }}</a>
                </li>
                <li>
                    <a href="{{ url('app_logout') }}"> {{ 'action_logout'|trans }}</a>
                </li>
                {% else %}
                <li>
                    <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
                </li>
                <li>
                    <a href="{{ url('app_register') }}">{{ 'action_register'|trans }}</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}                                                                                                                                                                                                                                   
            <div class="alert alert-{{ type }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>